<Window x:Class="WpfApp1.RedactTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="RedactTest" Height="450" Width="800">
    <Grid x:Name="TestGrid">
        <Button x:Name="AddButton" Content="Добавить вопрос" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Height="39" Width="133" Click="AddQuest_Click"/>
        <Button x:Name="DelButton" Content="Удалить вопрос" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Height="42" Width="133" Click="DelButton_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.397"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.476"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="testName" HorizontalAlignment="Left" Margin="110,14,0,0" TextWrapping="Wrap" Text="Test" VerticalAlignment="Top" Width="120"/>
        <Label Content="Название теста: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top" Height="39" Width="133" Click="Exit_Click"/>
        <Button Content="Сохранить тест" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Height="39" Width="133" Click="Create_Click"/>

    </Grid>
</Window>
