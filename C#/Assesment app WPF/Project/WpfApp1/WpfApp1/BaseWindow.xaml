<Window x:Class="WpfApp1.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BaseWindow" Height="173" Width="354">
    <Grid>
        <Label Content="Имя:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Роль:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>

        <Label x:Name="_name" Content="Имя" HorizontalAlignment="Left" Margin="76,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_surname" Content="Фамилия" HorizontalAlignment="Left" Margin="77,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_isTeacher" Content="Роль" HorizontalAlignment="Left" Margin="76,72,0,0" VerticalAlignment="Top"/>

        <Button Content="Пройти тест" HorizontalAlignment="Left" Margin="141,7,0,0" VerticalAlignment="Top" Width="186" Height="31" Click="Testing_Click"/>
        <Button x:Name="Redact" Content="Редактировать тесты" HorizontalAlignment="Left" Margin="141,38,0,0" VerticalAlignment="Top" Width="186" Height="31" IsEnabled="False" Click="Redact_Click"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="141,100,0,0" VerticalAlignment="Top" Width="186" Height="32" Click="ExitButton_Click"/>
        <Button Content="Результаты" HorizontalAlignment="Left" Margin="141,69,0,0" VerticalAlignment="Top" Height="31" Width="186" Click="Results_Click"/>
    </Grid>
</Window>
