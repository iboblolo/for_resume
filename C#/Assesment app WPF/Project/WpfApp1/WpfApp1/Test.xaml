<Window x:Class="WpfApp1.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Test" Height="450" Width="800">
    <Grid x:Name="TestGrid">
        <Label Content="Имя:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Роль:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>

        <Label x:Name="_name" Content="Имя" HorizontalAlignment="Left" Margin="76,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_surname" Content="Фамилия" HorizontalAlignment="Left" Margin="77,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_isTeacher" Content="Роль" HorizontalAlignment="Left" Margin="76,72,0,0" VerticalAlignment="Top"/>
        <Button Content="Прервать тест" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="127" Height="45" Click="Exit_Click"/>
        <Button Content="Завешить тест" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Width="127" Height="45" Click="EndTest_Click"/>

    </Grid>
</Window>
