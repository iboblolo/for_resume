<Window x:Class="WpfApp1.Redacting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Redacting" Height="450" Width="800">
    <Grid>
        <Label Content="Имя:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Роль:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>

        <Label x:Name="_name" Content="Имя" HorizontalAlignment="Left" Margin="76,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_surname" Content="Фамилия" HorizontalAlignment="Left" Margin="77,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_isTeacher" Content="Роль" HorizontalAlignment="Left" Margin="76,72,0,0" VerticalAlignment="Top"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Height="27" Width="127" Click="Exit_Click"/>
        <Button Content="Редактировать тест" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Height="27" Width="127" Click="Redacting_Click"/>
        <Button Content="Создать новый тест" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" Height="27" Width="127" Click="NewTest_Click"/>
        <ListBox x:Name="Tests" Margin="142,11,82,141"/>

    </Grid>
</Window>
